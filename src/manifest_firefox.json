{
  "name": "BetterYT - Better YouTube",
  "description": "Adds useful changes to YouTube, such as showing the mini player when scrolling.",
  "version": "0.0.8",
  "manifest_version": 2,
  "default_locale": "en",
  "icons": {
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "64": "images/icon-64.png",
    "96": "images/icon-96.png",
    "128": "images/icon-128.png",
    "256": "images/icon-256.png",
    "512": "images/icon-512.png"
  },
  "content_scripts": [
    {
      "js": ["js/content.js"],
      "css": ["css/content.css"],
      "matches": ["*://*.youtube.com/*"]
    }
  ],
  "browser_action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "images/toolbar-icon-16.png",
      "19": "images/toolbar-icon-19.png",
      "24": "images/toolbar-icon-24.png",
      "32": "images/toolbar-icon-32.png",
      "38": "images/toolbar-icon-38.png",
      "48": "images/toolbar-icon-48.png",
      "72": "images/toolbar-icon-72.png"
    }
  },
  "permissions": ["storage", "https://returnyoutubedislikeapi.com/"],
  "browser_specific_settings": {
    "gecko": {
      "id": "{fe1efc84-ba8a-4b97-9f91-88991d3a52c2}"
    }
  }
}
